
@{
    ViewBag.Title = "ADD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w3-container">
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 w3-padding-32 w3-small">
                <form method="post" action="/Home/Add_gadget" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" name="name" class="form-control" placeholder="Enter the Device Name..." required/>
                    </div>
                    <div class="form-group">
                        <label>Company:</label>
                        <input type="text" name="company" class="form-control" placeholder="Enter the Company Name..." required/>
                    </div>
                    <div class="form-group">
                        <label>Image:</label>
                        <input type="file" name="fileName" class="form-control" placeholder="Select the Device Image..." required/>
                    </div>
                    <div class="form-group">
                        <label>Category:</label>
                        <input type="text" name="category" class="form-control" placeholder="Enter the Device Category..." required/>
                    </div>
                    <div class="form-group">
                        <label>Quantity:</label>
                        <input type="number" name="quantity" class="form-control" placeholder="Enter the Quantity..." required/>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="w3-btn w3-round w3-blue"/>
                        <input type="reset" class="w3-btn w3-round w3-red"/>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>

