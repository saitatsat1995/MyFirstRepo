@{
    ViewBag.Title = "Home Page";
}
<div class="w3-container">
    <div class="row w3-padding-16">
        <div class="col-md-6">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" style="max-height:400px">
                    <div class="item active">
                        <video width="100%" loop controls autoplay>
                            <source src="~/Content/video/Sony-cam.ogv" type="video/ogg">
                        </video>
                    </div>
                    @foreach (var i in ViewBag.IMG) {
                        <div class="item">
                            <center><img src="~/Content/images/@Html.Encode(i.image)" alt="Los Angeles" style="max-height:400px"></center>
                        </div>
                    }
               </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
        </div>
        <div class="col-md-6">
            <div class="w3-card-4 w3-padding">
                <div class="row">
                    <div class="col-md-5">
                        <form method="GET" action="/Home/Search">
                            <input type="text" name="Query" id="query" placeholder="Search a product..." style="width:700px;height:35px;padding:5px;border-radius:5px;" autocomplete="off" />

                    </div>
                    <div class="col-md-7">
                        <button class="w3-btn w3-green w3-round">Search</button>
                        </form>
                        <button class="w3-btn  w3-small w3-pink w3-round">@Html.ActionLink("ADD", "ADD", "Home")</button>

                        <button class="w3-btn  w3-small w3-black w3-round">@Html.ActionLink("FAV", "FAV", "Home")</button>

                        <button class="w3-btn  w3-small w3-blue w3-round">@Html.ActionLink("VIEW", "ALL", "Home")</button>
                    </div>
                </div>
                <div class="row">
                    <div id="search_result" style="position:absolute;z-index:100;margin-top:10px" class="w3-white">
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var i in ViewBag.IMG)
                {
                    <div class="col-md-3 w3-padding-32">
                        <center><img src="~/Content/images/@Html.Encode(i.image)" alt="Los Angeles" style="height:150px;width:100%"></center>
                        <br>
                        <center>@Html.Encode(i.name)</center>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
