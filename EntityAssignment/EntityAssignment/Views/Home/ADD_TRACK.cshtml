
@{
    ViewBag.Title = "ADD_TRACK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:100px">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-3">
            <h5 style="padding:10px;background-color:#0026ff;color:#ffffff"><b><center>ADD TRACK</center></h5>
            <form method="POST" action="/Home/add_track_server">
                <div class="form-group">
                    <label>TRACK ID</label>
                    <input type="number" class="form-control" name="trackid" placeholder="Enter Track ID" />
                </div>
                <div class="form-group">
                    <label>TRACK NAME</label>
                    <input type="text" class="form-control" name="trackName" placeholder="Enter Track Name" />
                </div>
                <div class="form-group">
                    <label>LEAD NAME</label>
                    <input type="text" class="form-control" name="leadName" placeholder="Enter Track Name" />
                </div>
                <div class="form-group">
                    <label>ROOM ALLOCATED</label>
                    <input type="text" class="form-control" name="room" placeholder="Enter Track Name" />
                </div>
                <div class="form-group">
                    <center><button class="btn btn-primary">ADD</button></center>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>