@{
    ViewBag.Title = "Home Page";

}

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
            <div class="col-md-4 w3-padding-64">
                <div class="panel-info">
                    <div class="w3-blue w3-padding">
                        <center>Login</center>
                    </div>
                    <div class="panel-body">
                        <form method="post" action="/Home/Login">
                            <div class="form-group">
                                <label for="userEmail">Email</label>
                                <input type="email" name="userEmail" class="form-control" placeholder="Enter the Email ID..." required />
                            </div>
                            <div class="form-group">
                                <label for="userPass">Email</label>
                                <input type="Password" name="userPassword" class="form-control" placeholder="Enter the Password..." required />
                            </div>
                            <div class="form-group">
                                <center><button class="w3-button w3-green w3-round">Submit</button></center>
                                @(ViewBag.status)
                            </div>
                        </form>
                    </div>
                    <div class="w3-padding w3-blue">
                        <center>Not Registered Yet??@Html.ActionLink("Sign Up", "SignUp", "Home")</center>
                    </div>
                </div>
            </div>
        </div>
    </div>