
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="w3-container w3-padding-16" style="background: url(../../Content/images/books.jpeg) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;padding-top:100px;padding-bottom:200px">
    <div class="container">
        <center><h4><b>Books of Your Intrest..</b></h4></center>
        <div class="row w3-padding-32">
            @foreach (var i in ViewBag.FavList)
            {
                <div class="col-md-3 w3-padding-16">
                    <div class="w3-card-4">
                        <img src="~/Content/images/@Html.Encode(i.img)" width="100%" height="300px" />
                        <table class="w3-table-all w3-small w3-center">
                            <tr>
                                <td>@Html.Encode(i.title)</td>
                            </tr>
                            <tr>
                                <td>@Html.Encode(i.author)</td>
                            </tr>
                            <tr>
                                <td>@Html.Encode(i.category)</td>
                            </tr>
                            <tr>
                                <td>@Html.Encode(i.location)</td>
                            </tr>
                            <tr>
                                <td>Total Pages: @Html.Encode(i.pages)</td>
                            </tr>
                            <tr>
                                <td>Tags: @Html.Encode(i.tags)</td>
                            </tr>
                            <tr>
                                <td>
                                    @if (i.isFav == 1)
                                    {
                                    <center>
                                        <form method="POST" action="/Home/Remove_to_fav">
                                            <input type="hidden" name="id" value="@Html.Encode(i.id)" />
                                            <center><button class="w3-btn w3-red w3-small w3-round"><img src="~/Content/images/heart.png" height="15px" /></button></center>
                                        </form>
                                    </center>
                                    }
                                    else
                                    {
                                        <form method="POST" action="/Home/Add_to_fav">
                                            <input type="hidden" name="id" value="@Html.Encode(i.id)" />
                                            <center><button class="w3-btn w3-green w3-small w3-round"><img src="~/Content/images/heart.png" height="15px" /></button></center>
                                        </form>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            }
        </div>
        </div>
    </div>

